{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome against localhost, with sourcemaps",
      "type": "chrome",
      "request": "launch",
      "sourceMaps": true,
      "url": "http://localhost:3000/",
      "webRoot": "${workspaceRoot}" // ${workspaceRoot}/appではない
    },
    {
      "name": "Attach to Chrome, with sourcemaps",
      "type": "chrome",
      "request": "attach",
      "port": 9222, // Chrome起動時のremote-debugging-portを指定
      "sourceMaps": true,
      "url": "http://localhost:3000/",
      "webRoot": "${workspaceRoot}" // ${workspaceRoot}/appではない
    }
  ]
}
